\ProvidesPackage{commands}

% ==========================================================
%               Custom LaTex commands
% ==========================================================

% Number sets
\newcommand{\N}{\mathbb{N}} % natural numbers
\newcommand{\Z}{\mathbb{Z}} % integers
\newcommand{\Q}{\mathbb{Q}} % rational numbers
\newcommand{\R}{\mathbb{R}} % real numbers
\newcommand{\C}{\mathbb{C}} % complex numbers

% TODO notes
\newcommandx{\unsure}[2][1=]{\todo[linecolor=red,backgroundcolor=red!25,bordercolor=red,#1]{#2}}
\newcommandx{\change}[2][1=]{\todo[linecolor=blue,backgroundcolor=blue!25,bordercolor=blue,#1]{#2}}
\newcommandx{\info}[2][1=]{\todo[linecolor=OliveGreen,backgroundcolor=OliveGreen!25,bordercolor=OliveGreen,#1]{#2}}
\newcommandx{\improvement}[2][1=]{\todo[linecolor=Plum,backgroundcolor=Plum!25,bordercolor=Plum,#1]{#2}}
\newcommandx{\todoil}[2][1=]{\todo[inline=true,#1]{#2}}
\newcommandx{\unsureil}[2][1=]{\unsure[inline=true,#1]{#2}}
\newcommandx{\changeil}[2][1=]{\change[inline=true,#1]{#2}}
\newcommandx{\infoil}[2][1=]{\info[inline=true,#1]{#2}}
\newcommandx{\improvementil}[2][1=]{\improvement[inline=true,#1]{#2}}

% Checkmark and X-Mark
\newcommand{\cmark}{\text{\ding{51}}}
\newcommand{\xmark}{\text{\ding{55}}}

% Binary units
\newcommand{\PB}[1]{\SI{#1}{\peta\byte}}
\newcommand{\TB}[1]{\SI{#1}{\tera\byte}}
\newcommand{\GB}[1]{\SI{#1}{\giga\byte}}
\newcommand{\MB}[1]{\SI{#1}{\mega\byte}}
\newcommand{\KB}[1]{\SI{#1}{\kilo\byte}}

% Math operators
% Use \DeclareMathOperator{\Command}{Text} to create math operators

% Definitons, Theorems, Lemmas
\newtheorem{definition}{Definition}[chapter]
\newtheorem{theorem}{Theorem}[chapter]
\newtheorem{lemma}{Lemma}[chapter]

% Table columns
\newcolumntype{L}[1]{>{\hsize=#1\hsize\raggedright\arraybackslash}X}%
\newcolumntype{R}[1]{>{\hsize=#1\hsize\raggedleft\arraybackslash}X}%
\newcolumntype{C}[1]{>{\hsize=#1\hsize\centering\arraybackslash}X}%
